<%- include('../partials/header') %>    
    <main class="container main-section">
        <section class="section-titulos-principales">
            <h2>Carrito de compras</h2>
            <section class="encabezado-tabla-detalle">
                <div>Detalle de producto</div>
                <div>Cantidad</div>
                <div>Total</div>
                <div class="encabezado__itemBorrar"></div>
            </section>
            <section class="cart-item">
                <div class="image"><img src="../../img/star-wars/baby-yoda-1.webp" alt=""></div>
                <div class="info">
                    <h3>BABY YODA BLUEBALL</h3>
                    <h6>STAR WARS</h6>
                    <p>precio $1799,99</p>
                </div>
                <div class="quantity">
                    <input type="number" id="cantidad" name="cantidad" value="2" min="1" required>
                </div>
                </div>

                <div class="total">
                    <p class="precio-producto_carrito">$3599,98</p>
                </div>
                <div class="cancelar-producto"><i class="fa-regular fa-circle-xmark"></i></div>

            </section>
        </section>

        <section class="cart-item">
            <div class="image">
                <picture><img src="../../img/pokemon/pidgeotto-1.webp" alt="PIDGEOTTO"></picture>
            </div>
            <div class="info">
                <h3>PIDGEOTTO</h3>
                <h6>POKEMON</h6>
                <p>precio $1799,99</p>
            </div>
            </div>
            <div class="quantity">
                <input type="number" id="cantidad" name="cantidad" value="1" min="1" required>
            </div>
            </div>
            <div class="total">
                <p class="precio-producto_carrito">$1799,99</p>
            </div>
            <div class="cancelar-producto"><i class="fa-regular fa-circle-xmark"></i></div>
        </section>
        </section>
        <!-- resumen -->
        <section class="section-titulos-principales derecha">
            <h2>Resumen</h2>
            <section class="tabla-resumen-con-boton">
                <article id="tabla-resumen">
                    <p class="item-resumen_carrito">Cantidad de elementos <span id="cantidad-elementos">3</span></p>
                    <p class="item-resumen_carrito">Subtotal <span id="subtotal">$ 5.399,97</span></p>
                    <p class="item-resumen_carrito">Envio <span id="envio">$0,00</span></p>
                    <!-- <hr> -->
                    <p class="item-resumen_carrito">TOTAL <span id="total">$ 5.399,97</span></p>
                </article>
                <button class="btn-pagar">Ir a Pagar</button>
            </section>

        </section>
    </main>
    <!-- footer -->
    <%- include('../partials/footer') %>    
</body>

</html>